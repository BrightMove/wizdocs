        </div>
    </div>
    
    <!-- Projects Table -->
    <div id="projectsTable">
        <div class="empty-state">
            <div class="empty-state-icon">üìä</div>
            <p>Loading projects...</p>
        </div>
    </div>
</div>

<!-- Create Project Modal -->
