<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Tools - WizDocs</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #f5f5f5;
            color: #333;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            margin-bottom: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        
        .header h1 {
            font-size: 2.8em;
            margin-bottom: 10px;
            font-weight: 300;
        }
        
        .header p {
            opacity: 0.9;
            font-size: 1.2em;
            margin-bottom: 20px;
        }
        
        .nav-tabs {
            display: flex;
            background: rgba(255,255,255,0.1);
            border-radius: 8px;
            padding: 4px;
            margin-top: 20px;
        }
        
        .nav-tab {
            flex: 1;
            padding: 12px 20px;
            text-align: center;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s;
            font-weight: 500;
        }
        
        .nav-tab:hover, .nav-tab.active {
            background: rgba(255,255,255,0.2);
            color: white;
        }
        
        .section-header {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            color: white;
            padding: 20px;
            margin: 30px 0 20px 0;
            border-radius: 8px;
            text-align: center;
        }
        
        .section-header h2 {
            font-size: 1.8em;
            margin-bottom: 10px;
            font-weight: 300;
        }
        
        .section-header p {
            opacity: 0.9;
            font-size: 1.1em;
        }
        
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 25px;
            margin-top: 20px;
        }
        
        .project-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s, box-shadow 0.3s;
            border-left: 4px solid #fa709a;
        }
        
        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }
        
        .project-card h3 {
            color: #2c3e50;
            margin-bottom: 15px;
            font-size: 1.4em;
            font-weight: 600;
        }
        
        .project-card p {
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
        }
        
        .project-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .stat-item {
            background: #f8f9fa;
            padding: 12px;
            border-radius: 8px;
            text-align: center;
        }
        
        .stat-number {
            font-size: 1.5em;
            font-weight: bold;
            color: #667eea;
        }
        
        .stat-label {
            font-size: 0.9em;
            color: #666;
            margin-top: 5px;
        }
        
        .btn {
            display: inline-block;
            padding: 12px 24px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s;
            box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
            margin-right: 10px;
            margin-bottom: 10px;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            box-shadow: 0 2px 10px rgba(250, 112, 154, 0.3);
        }
        
        .btn-warning:hover {
            box-shadow: 0 4px 15px rgba(250, 112, 154, 0.4);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            box-shadow: 0 2px 10px rgba(255, 107, 107, 0.3);
        }
        
        .btn-danger:hover {
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            box-shadow: 0 2px 10px rgba(79, 172, 254, 0.3);
        }
        
        .btn-success:hover {
            box-shadow: 0 4px 15px rgba(79, 172, 254, 0.4);
        }
        
        .create-project {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
            border: 2px dashed #ddd;
        }
        
        .create-project h3 {
            color: #2c3e50;
            margin-bottom: 15px;
            font-size: 1.4em;
            font-weight: 600;
        }
        
        .form-group {
            margin-bottom: 15px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
            color: #2c3e50;
        }
        
        .form-group input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        .project-type-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.8em;
            font-weight: 500;
            margin-bottom: 10px;
        }
        
        .badge-rfp {
            background: #e3f2fd;
            color: #1976d2;
        }
        
        .badge-sow {
            background: #f3e5f5;
            color: #7b1fa2;
        }
        
        .last-modified {
            font-size: 0.9em;
            color: #666;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Sales Tools</h1>
            <p>AI-powered tools for RFP responses and Statement of Work generation</p>
            
            <div class="nav-tabs">
                <a href="/" class="nav-tab">Dashboard</a>
                <a href="/audits" class="nav-tab">Audits</a>
                <a href="/sales-tools" class="nav-tab active">Sales Tools</a>
                <a href="/settings" class="nav-tab">Settings</a>
            </div>
        </div>
        
        <div class="create-project">
            <h3>Create New Project</h3>
            <div style="display: flex; gap: 20px; align-items: end;">
                <div class="form-group" style="flex: 1;">
                    <label for="new-rfp-project">New RFP Project Name:</label>
                    <input type="text" id="new-rfp-project" placeholder="e.g., 2025-01-15-client-name">
                </div>
                <button onclick="createRFPProject()" class="btn btn-warning">Create RFP Project</button>
            </div>
            
            <div style="display: flex; gap: 20px; align-items: end; margin-top: 15px;">
                <div class="form-group" style="flex: 1;">
                    <label for="new-sow-project">New SOW Project Name:</label>
                    <input type="text" id="new-sow-project" placeholder="e.g., client-name-sow">
                </div>
                <button onclick="createSOWProject()" class="btn btn-warning">Create SOW Project</button>
            </div>
        </div>
        
        <div class="section-header">
            <h2>ðŸ“‹ RFP Projects</h2>
            <p>Automated RFP response generation with AI-powered requirement analysis</p>
        </div>
        
        <div class="projects-grid">
            <% @rfp_projects.each do |project| %>
                <div class="project-card">
                    <div class="project-type-badge badge-rfp">RFP</div>
                    <h3><%= project[:name] %></h3>
                    <div class="last-modified">Last modified: <%= project[:last_modified] %></div>
                    
                    <div class="project-stats">
                        <div class="stat-item">
                            <div class="stat-number"><%= project[:input_count] %></div>
                            <div class="stat-label">Input Files</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number"><%= project[:output_count] %></div>
                            <div class="stat-label">Output Files</div>
                        </div>
                    </div>
                    
                    <p>AI-powered RFP analysis and response generation project.</p>
                    
                    <a href="/sales-tools/rfp/<%= project[:name] %>" class="btn">View Details</a>
                    <button onclick="deleteRFPProject('<%= project[:name] %>')" class="btn btn-danger">Delete</button>
                </div>
            <% end %>
            
            <% if @rfp_projects.empty? %>
                <div class="project-card">
                    <h3>No RFP Projects</h3>
                    <p>Create your first RFP project to get started with automated response generation.</p>
                </div>
            <% end %>
        </div>
        
        <div class="section-header">
            <h2>ðŸ“„ SOW Projects</h2>
            <p>Generate comprehensive Statements of Work with automated scope definition</p>
        </div>
        
        <div class="projects-grid">
            <% @sow_projects.each do |project| %>
                <div class="project-card">
                    <div class="project-type-badge badge-sow">SOW</div>
                    <h3><%= project[:name] %></h3>
                    <div class="last-modified">Last modified: <%= project[:last_modified] %></div>
                    
                    <div class="project-stats">
                        <div class="stat-item">
                            <div class="stat-number"><%= project[:input_count] %></div>
                            <div class="stat-label">Input Files</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number"><%= project[:output_count] %></div>
                            <div class="stat-label">Output Files</div>
                        </div>
                    </div>
                    
                    <p>Automated Statement of Work generation with scope and deliverable tracking.</p>
                    
                    <a href="/sales-tools/sow/<%= project[:name] %>" class="btn">View Details</a>
                    <button onclick="deleteSOWProject('<%= project[:name] %>')" class="btn btn-danger">Delete</button>
                </div>
            <% end %>
            
            <% if @sow_projects.empty? %>
                <div class="project-card">
                    <h3>No SOW Projects</h3>
                    <p>Create your first SOW project to get started with automated scope definition.</p>
                </div>
            <% end %>
        </div>
    </div>
    
    <script>
        function createRFPProject() {
            const projectName = document.getElementById('new-rfp-project').value.trim();
            if (!projectName) {
                alert('Please enter a project name');
                return;
            }
            
            fetch('/api/sales-tools/rfp/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name: projectName })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('RFP Project created successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error creating project');
            });
        }
        
        function createSOWProject() {
            const projectName = document.getElementById('new-sow-project').value.trim();
            if (!projectName) {
                alert('Please enter a project name');
                return;
            }
            
            fetch('/api/sales-tools/sow/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name: projectName })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('SOW Project created successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error creating project');
            });
        }
        
        function deleteRFPProject(projectName) {
            if (!confirm(`Are you sure you want to delete the RFP project "${projectName}"?`)) {
                return;
            }
            
            fetch('/api/sales-tools/rfp/delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name: projectName })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('RFP Project deleted successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting project');
            });
        }
        
        function deleteSOWProject(projectName) {
            if (!confirm(`Are you sure you want to delete the SOW project "${projectName}"?`)) {
                return;
            }
            
            fetch('/api/sales-tools/sow/delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name: projectName })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('SOW Project deleted successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting project');
            });
        }
    </script>
</body>
</html>
