<!DOCTYPE html>
<html lang="en" data-theme="system">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audits - Wiseguy</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <div class="logo-icon">🦉</div>
                    <div class="logo-text">
                        <h1>Wiseguy</h1>
                        <p>Agentic AI Platform</p>
                    </div>
                </div>
                
                <div class="header-actions">
                    <div class="theme-toggle" id="themeToggle" data-theme="system" title="Toggle theme">
                        <span style="position: absolute; top: 50%; left: 6px; transform: translateY(-50%); font-size: 10px;">☀️</span>
                        <span style="position: absolute; top: 50%; right: 6px; transform: translateY(-50%); font-size: 10px;">🌙</span>
                    </div>
                </div>
            </div>
            
            <div class="nav-tabs">
                <a href="/" class="nav-tab">Dashboard</a>
                <a href="/sales-tools" class="nav-tab">Sales Tools</a>
                <a href="/audits" class="nav-tab active">Audits</a>
                <a href="/settings" class="nav-tab">Settings</a>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <h1 class="section-title">Audits & Analysis</h1>
            <p class="section-subtitle">Comprehensive audit tools for development tickets, content analysis, and veracity verification</p>
            
            <div class="actions">
                <a href="/tickets" class="btn">🎫 Development & Support Tickets</a>
                <a href="/comprehensive-tickets" class="btn">📋 Comprehensive Ticket View</a>
                <a href="/content-analysis" class="btn">📚 Customer & Internal Content</a>
                <a href="/github-impact" class="btn">🔗 GitHub Impact Analysis</a>
            </div>
            
            <div class="stats-section">
                <div class="stats-header">
                    <div class="stats-icon primary">📁</div>
                    <h3 class="stats-title">Veracity Audits</h3>
                </div>
                
                <div class="actions" style="margin-bottom: 20px;">
                    <button onclick="createAudit()" class="btn">Create New Audit</button>
                    <button onclick="refreshAudits()" class="btn secondary">Refresh List</button>
                </div>
                
                <div id="audits-list">
                    <p style="color: var(--text-secondary); text-align: center;">Loading audits...</p>
                </div>
            </div>
        </div>
    </main>
    
    <script src="/theme.js"></script>
    <script>
        // Load audits on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadAudits();
        });
        
        function loadAudits() {
            fetch('/api/audits/list')
            .then(response => response.json())
            .then(audits => {
                const container = document.getElementById('audits-list');
                if (audits.length === 0) {
                    container.innerHTML = '<p style="color: var(--text-secondary); text-align: center;">No audits found</p>';
                    return;
                }
                
                container.innerHTML = audits.map(audit => `
                    <div class="card" style="margin-bottom: 16px;">
                        <div class="card-header">
                            <div class="card-icon primary">📁</div>
                            <div style="flex: 1;">
                                <h4 style="margin: 0; color: var(--text-primary);">${audit.name}</h4>
                                <p style="margin: 4px 0 0 0; color: var(--text-secondary); font-size: 14px;">
                                    Last modified: ${audit.last_modified}
                                </p>
                            </div>
                        </div>
                        <div style="display: flex; gap: 12px; margin-top: 16px;">
                            <a href="/audits/${audit.name}" class="btn" style="flex: 1;">View Details</a>
                            <button onclick="deleteAudit('${audit.name}')" class="btn secondary" style="flex: 0 0 auto;">Delete</button>
                        </div>
                    </div>
                `).join('');
            })
            .catch(error => {
                console.error('Error loading audits:', error);
                document.getElementById('audits-list').innerHTML = '<p style="color: var(--accent-danger); text-align: center;">Error loading audits</p>';
            });
        }
        
        function createAudit() {
            const auditName = prompt('Enter audit name:');
            if (!auditName) return;
            
            fetch('/api/audits/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name: auditName })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Audit created successfully!');
                    loadAudits();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error creating audit');
            });
        }
        
        function deleteAudit(auditName) {
            if (!confirm(`Are you sure you want to delete the audit "${auditName}"?`)) {
                return;
            }
            
            fetch('/api/audits/delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name: auditName })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Audit deleted successfully!');
                    loadAudits();
                } else {
                    alert('Error: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting audit');
            });
        }
        
        function refreshAudits() {
            loadAudits();
        }
    </script>
</body>
</html> 