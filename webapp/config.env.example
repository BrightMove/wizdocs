# JIRA Configuration
JIRA_SITE=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your-jira-api-token

# Intercom Configuration
INTERCOM_ACCESS_TOKEN=your-intercom-access-token
INTERCOM_CLIENT_ID=your-intercom-client-id
INTERCOM_CLIENT_SECRET=your-intercom-client-secret

# GitHub Configuration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# AWS Bedrock Configuration (for LLM and RAG)
# Required for LLM-powered search and analysis
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Available Bedrock Models:
# - anthropic.claude-3-sonnet-20240229-v1:0 (LLM)
# - anthropic.claude-3-haiku-20240307-v1:0 (LLM - faster)
# - amazon.titan-embed-text-v1 (Embeddings)

# Redis Configuration (optional, for vector storage)
REDIS_URL=redis://localhost:6379

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFICATION_EMAILS=admin@company.com,tech-lead@company.com

# Application Configuration
PORT=3000
ENVIRONMENT=development 