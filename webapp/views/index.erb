                    console.error('Error fetching stats:', error);
                    document.getElementById('quick-stats').innerHTML = '<div class="stat-item"><div class="stat-number">‚ö†Ô∏è</div><div class="stat-label">Error loading statistics</div></div>';
                });
        }
        
        // Load stats on page load
        document.addEventListener('DOMContentLoaded', function() {
            refreshStats();
            checkWizAgentStatus();
        });
        
        // Wiz Chat Agent Functions
        let wizAgentStatus = 'unknown';
        
        // Check Wiz Agent status on page load
        function checkWizAgentStatus() {
            fetch('/api/wiz/health')
                .then(response => response.json())
                .then(data => {
                    wizAgentStatus = data.success ? 'connected' : 'disconnected';
                    updateWizStatusIndicator();
                })
                .catch(error => {
                    console.error('Error checking Wiz Agent status:', error);
                    wizAgentStatus = 'disconnected';
                    updateWizStatusIndicator();
                });
        }
        
        function updateWizStatusIndicator() {
            const statusElements = document.querySelectorAll('.wiz-status-indicator');
            statusElements.forEach(element => {
                if (wizAgentStatus === 'connected') {
                    element.innerHTML = '<span style="color: #28a745;">üü¢ Connected to AI</span>';
                    element.title = 'Connected to wiz-agent microservice';
                } else {
                    element.innerHTML = '<span style="color: #dc3545;">üî¥ Local Mode</span>';
                    element.title = 'Using local responses (wiz-agent unavailable)';
                }
            });
        }
        
        function sendWizMessage() {
            const input = document.getElementById('wizChatInput');
            const message = input.value.trim();
            
            if (!message) return;
            
            // Add user message to chat
            addWizMessage(message, 'user');
            input.value = '';
            
            // Show typing indicator
            const typingIndicator = addTypingIndicator();
            
            // Send to Wiz API
            fetch('/api/wiz/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ 
                    message: message,
                    context: 'general'
                })
            })
            .then(response => response.json())
            .then(data => {
                // Remove typing indicator
                removeTypingIndicator(typingIndicator);
                
                if (data.success) {
                    addWizMessage(data.response, 'bot');
                } else {
                    addWizMessage('Sorry, I encountered an error. Please try again.', 'bot');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                removeTypingIndicator(typingIndicator);
                addWizMessage('Sorry, I encountered an error. Please try again.', 'bot');
            });
        }
        
        function askWiz(message, context) {
            // Add user message to chat
            addWizMessage(message, 'user');
            
            // Show typing indicator
            const typingIndicator = addTypingIndicator();
            
            // Send to Wiz API
            fetch('/api/wiz/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ 
                    message: message,
                    context: context
                })
