                        if (sendBtn) sendBtn.disabled = true;
                        quickBtns.forEach(btnId => {
                            const btn = document.getElementById(btnId);
                            if (btn) btn.disabled = true;
                        });
                        
                        // Clear existing messages and show offline message
                        messagesContainer.innerHTML = '';
                        addWizModalMessage('The Wiz Agent service is currently offline. Please try again later when the service is available.', 'bot');
                    }
